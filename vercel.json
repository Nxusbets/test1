{
    "rewrites": [
      { "source": "/api/:path*", "destination": "/backend/server.js" },
      { "source": "/(.*)", "destination": "/frontend/build/index.html" }
    ],
    "builds": [
      { "src": "backend/server.js", "use": "@vercel/node" },
      { "src": "frontend/build/**", "use": "@vercel/static" }
    ],
    "installCommand": "npm install && cd backend && npm install",
    "routes": [
      { "src": "/api/:path*", "dest": "/api/[path]" }
    ]
  }